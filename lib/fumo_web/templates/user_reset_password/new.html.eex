<div class="form-container">
<h1 class="header">Forgot your password?</h1>
<%= form_for :user, Routes.user_reset_password_path(@conn, :create),[class: "form"], fn f -> %>
  <%= label f, :email, class: "sr-only" %>
  <%= email_input f, :email, required: true, placeholder: "Email"  %>

  <div>
    <%= submit "Send Password", class: "btn" %>
  </div>
<% end %>

<%= render FumoWeb.SharedView, "_registration_links.html", conn: @conn %>

</div>